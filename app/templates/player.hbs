<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="flex flex-col lg:flex-row lg:space-x-8">
    {{!-- Player Details Card (Full width, half height on large screens) --}}
    <div class="flex-grow bg-white rounded-lg shadow-md p-4">
  {{!-- Player Photo --}}
  <div class="mb-4">
    <img src="{{@model.player.photoUrl}}" alt="{{@model.player.fullName}}" class="h-64 w-full object-cover rounded-t-lg" loading="lazy">
  </div>

  {{!-- Player Details --}}
  <div class="flex flex-col items-center">
    <h2 class="text-xl font-semibold text-gray-900">{{@model.player.fullName}}</h2>
    <p class="text-sm text-gray-600 mb-2">{{@model.player.position}}</p>

    {{!-- Club Information --}}
    <div class="flex items-center mb-2">
      {{!-- Club Logo (Replace with actual logo or image URL) --}}
      <img src="{{@model.player.clubLogoUrl}}" alt="{{@model.player.club}}" class="h-16 w-16 object-contain rounded mr-2">

      {{!-- Club Name --}}
      <div>
        <p class="text-sm font-medium text-gray-700">{{@model.player.club}}</p>
        <p class="text-xs text-gray-500">Market Value: {{@model.player.marketValue}}</p>
      </div>
    </div>

    {{!-- Additional Player Information (if needed) --}}
    {{!-- Replace with additional details as required --}}
  </div>
</div>

    <!-- Appearances Table -->
  <div class="bg-white shadow rounded-lg p-4 mb-4 lg:w-2/3">
    <h2 class="text-xl font-semibold mb-2">Appearances</h2>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Opponent</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Result</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {{#each @model.appearances.dates as |appearance|}}
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">{{appearance.date}}</td>
            <td class="px-6 py-4 whitespace-nowrap">{{appearance.opponent}}</td>
            <td class="px-6 py-4 whitespace-nowrap">
              {{#if appearance.isHomeMatch}}
                Home: {{appearance.ownTeamGoals}} - {{appearance.opponentGoals}}
              {{else}}
                Away: {{appearance.ownTeamGoals}} - {{appearance.opponentGoals}}
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  </div>

  {{!-- Market Value Evolution (1/3 width on large screens) --}}
  <div class="lg:w-1/3 mt-8">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">Market Value Evolution</h3>
      {{!-- Placeholder for line graph or chart --}}
      <div class="h-48 bg-gray-200 rounded-lg">
        {{!-- Replace with chart component or graphic --}}
        <p class="text-center text-gray-500 pt-16">Line Graph Placeholder</p>
      </div>
    </div>
  </div>
</div>